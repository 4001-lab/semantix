{
  "manifest_version": 3,
  "name": "Vocab Learner",
  "version": "1.0.0",
  "description": "Context-aware vocabulary learning with AI",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
