{
  "manifest_version": 3,
  "name": "Semantix",
  "version": "1.1.0",
  "description": "Multilingual Context-aware AI Powered Dictionary",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": [ "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
